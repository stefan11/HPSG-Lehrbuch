;; Start LKB in Emacs with ESC-x lkb
;; then type 
;; (lkb::read-script-file-aux "/Users/stefan/Documents/Dienstlich/Buecher/HPSG-Lehrbuch-LangSci/Grammatiken/Kapitel-12/lkb/script")
;; or
;; (lkb::reload-script-file)


(progn
 (lkb-load-lisp (this-directory) "globals.lsp")
 (lkb-load-lisp (this-directory) "lkb2signature.lsp")
 (read-tdl-type-files-aux
          (list (lkb-pathname (this-directory) "types.tdl")))

 (with-open-file (*standard-output* 
                  (lkb-pathname (parent-directory) "signature")
                  :direction :output :if-exists :RENAME :if-does-not-exist :CREATE)
   (format t "\% -*- coding:utf-8; mode:trale-prolog -*-~%\% Do not edit this file! It is automatically generated from lkb/types.tdl.~%~%")
   (print_signature 'bot)          
                  )
 )